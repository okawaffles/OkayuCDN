    <nav>
        <ul class="nav_links">
            <li class="mobile-menu" id="mc"><a id="mca"><i class="fa-solid fa-bars"></i> Menu</a></li>
            <li><a id="home" href="/home"><i class="fa-solid fa-house"></i> Home</a></li>
