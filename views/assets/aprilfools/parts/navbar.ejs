<script>
    document.getElementById('mc').onclick = function() {
        let d = document.getElementById('mm').style.display;
        document.getElementById('mm').style.display = (d=='inline-block')?'none':'inline-block';
        //document.getElementById('mca').className = (d=='inline-block')?'mobile-menu':'mobile-menu active'; // this causes a bug on firefox and i cant figure it out
    };
    
    try {
        document.getElementById("<%=active%>").className = 'active';    // desktop
        document.getElementById("<%=active%>-m").className = 'active';  // mobile
    } catch (e) { console.log('failed to set active navitem; assuming this is a page without one.'); };

</script>