<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>okayu pointer landing</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pixi.js/5.1.3/pixi.min.js"></script>
    <style type="text/css">
        body {
            margin: 0;
            overflow: hidden;
        }
    </style>
</head>

<body>
    <script>

        let mX = 0;
        let mY = 0;
        let swid = screen.width;
        let shei = screen.height;
        let app = new PIXI.Application({ width: swid, height: shei });
        app.stage.interactive = true;
        document.body.appendChild(app.view);
        let bgi = PIXI.Sprite.from('/assets/images/landing/bgi.png');
        let korone = PIXI.Sprite.from('/assets/images/landing/korone.png');
        bgi.scale.set(1.1, 1.1);
        bgi.anchor.set(0.5);
        app.stage.addChild(bgi);
        koroneScale = 1.5 * (shei/1080);
        korone.x = (swid / 2) - ((480 * koroneScale) / 2);
        korone.y = shei - (470 * koroneScale);
        korone.scale.set(koroneScale, koroneScale);
        app.stage.addChild(korone);

        let title = new PIXI.Text(`korone`, { fontFamily: "Courier New", fontSize: 120, align: 'center', fill: "#87d1ff" });
        title.x = swid / 2 - (title.width / 2);
        title.y = 200;
        app.stage.addChild(title);

        let elapsed = 0.0;
        app.ticker.add((delta) => {
            elapsed += delta;
            korone.y = (shei - (440 * koroneScale)) + Math.cos(elapsed / 50.0) * 10.0;
            title.y = 200 + -Math.cos(elapsed / 50.0) * 10.0;

            bgi.x = swid / 2 - (mX / 75) + swid / 125;
            bgi.y = shei / 2 - (mY / 75) + shei / 125;
        });

        function updMXY(e) {
            let pos = e.data.global;
            mX = pos.x;
            mY = pos.y;
        }

        app.stage.on("pointermove", updMXY);
    </script>
</body>

</html>